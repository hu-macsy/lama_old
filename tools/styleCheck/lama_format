#!/bin/sh

ASTYLE=no
if test x$ASTYLE = "xno"; then
    ASTYLE=astyle
fi

OUTPUT=$($ASTYLE --version 2>&1 | cat)

# deduce the version
VERSION=${OUTPUT#Artistic Style Version }

OPTIONS="--style=ansi \
--indent=spaces=4 \
--indent-preprocessor \
--indent-switches \
--break-blocks \
--convert-tabs \
--pad-oper \
--pad-header \
--pad-paren-in \
--delete-empty-lines \
--add-brackets \
--align-pointer=type"

# --keep-one-line-statements \

CMD="$ASTYLE $OPTIONS $@"
echo $CMD
exec $CMD
