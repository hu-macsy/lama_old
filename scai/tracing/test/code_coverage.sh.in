source scai_code_coverage_functions.sh

# Check requirements for codecoverage
requirements_coverage

dirname=$(create_dir)
echo "Create coverage directory: ${dirname}"

prepare_coverage $dirname ../..

# Running tracing tests
echo "Running tracing tests"
count_error ./test.sh

# todo: remove this if jenkins cc works fine without it
# problem with these, so first ignore
rm simpleTracing.gcno simpleTracing.gcda

exit_on_failure ${error_count}

do_coverage $dirname ../.. "@CMAKE_SOURCE_DIR@/@MODULE_NAME@"

exit_on_failure $?

zip -qr ../logging_coverage.zip *
