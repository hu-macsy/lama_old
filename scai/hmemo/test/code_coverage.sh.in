source scai_code_coverage_functions.sh

dirname=$(create_dir)
echo "Create coverage directory: ${dirname}"

prepare_coverage $dirname ../..

export SCAI_LOG=TRACE
export SCAI_TRACE=time
	
# Running tests serial
echo "Running serial tests"
./hmemoTest >/dev/null
if [ $? -ne 0 ]
then
	echo "ERROR in hmemoTest"
	error_count=$(($error_count + $?))
fi

if [ -d cuda ];
then
	#Running CUDA tests
	echo "Running tests with CUDA context"
	./hmemoTest --SCAI_CONTEXT=CUDA >/dev/null
	echo "Running cuda tests"
	./cuda/hmemoCUDATest >/dev/null
	if [ $? -ne 0 ]
	then
		echo "ERROR in CudaTest"
		error_count=$(($error_count + $?))
	fi
fi

do_coverage $dirname ../.. "@CMAKE_SOURCE_DIR@"

if [ $? == 1 ];
then
    exit 1
fi

zip -qr ../hmemo_coverage.zip *
