source scai_code_coverage_functions.sh

dirname=$(create_dir)
echo "Create coverage directory: ${dirname}"

prepare_coverage $dirname ../..

export SCAI_LOG=TRACE
export SCAI_TRACE=time
	
# Running dmemo tests
echo "Running dmemo tests"
./dmemoTest >/dev/null
if [ $? -ne 0 ]
then
	echo "ERROR in dmemoTest"
	error_count=$(($error_count + $?))
fi

if [ -d ../mpi ];
then
    # Running parallel tests
    for i in 2 3 4;
    do
        echo "Running distributed tests with $i processes"
        mpirun -np $i ./dmemoTest >/dev/null
        if [ $? -ne 0 ]
        then
            echo "ERROR in dmemoTest"
            error_count=$(($error_count + $?))
        fi
    done
fi
    
do_coverage $dirname ../.. "@CMAKE_SOURCE_DIR@"

if [ $? == 1 ];
then
    exit 1
fi

zip -qr ../dmemo_coverage.zip *
