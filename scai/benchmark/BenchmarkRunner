#! /usr/bin/env python

import os, sys

directory  = os.path.realpath( os.path.dirname( sys.argv[0] ) )

PREFIX= os.path.realpath( os.path.dirname( directory ) )

# PREFIX is CMAKE_INSTALL_PREFIX for installation and CMAKE_BUILD_DIR in build

# module BenchmarkFramework might be one level higher for installation

sys.path.append( PREFIX )

# In the benchmark directory are the lib modules containing the benchmarks

os.environ[ "BENCHMARK_LIBRARY_PATH" ] = PREFIX + "/benchmark"

import pybench

pybench.main( )
