#!/bin/bash -e

export SCAI_LOG=TRACE
export SCAI_TRACE=time

# Running blaskernel serial
echo "Running serial tests"
./blaskernelTest --SCAI_CONTEXT=Host >/dev/null
if [ $? -ne 0 ]
then
	echo "ERROR in blaskernelTest"
	error_count=$(($error_count + $?))
fi

